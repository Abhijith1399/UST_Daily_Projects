â— Divide Operation

ğŸ“ inc/DivideOperation.h

#pragma once

class DivideOperation {
public:
    static double execute(double a, double b);
};

ğŸ“ src/DivideOperation.cpp

#include "DivideOperation.h"
#include <stdexcept>

double DivideOperation::execute(double a, double b) {
    if (b == 0.0)
        throw std::runtime_error("Division by zero");
    return a / b;
}


---

ğŸš€ src/main.cpp

#include <iostream>
#include "Calculator.h"

int main() {
    Calculator calc;
    double a = 10, b = 5;

    std::cout << "Add: " << calc.add(a, b) << "\n";
    std::cout << "Subtract: " << calc.subtract(a, b) << "\n";
    std::cout << "Multiply: " << calc.multiply(a, b) << "\n";

    try {
        std::cout << "Divide: " << calc.divide(a, b) << "\n";
    } catch (std::exception& ex) {
        std::cout << "Error: " << ex.what() << "\n";
    }

    return 0;
}


---

ğŸ§ª test/CalculatorTest.cpp

#include "../inc/Calculator.h"
#include <cassert>

int main() {
    Calculator calc;

    assert(calc.add(4, 5) == 9);
    assert(calc.subtract(10, 3) == 7);
    assert(calc.multiply(3, 4) == 12);
    assert(calc.divide(20, 4) == 5);

    try {
        calc.divide(5, 0);
        assert(false); // Should not reach here
    } catch (...) {
        assert(true); // Expected
    }

    return 0;
}


