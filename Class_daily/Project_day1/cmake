âœ… Add Operation

ğŸ“ inc/AddOperation.h

#pragma once

class AddOperation {
public:
    static double execute(double a, double b);
};

ğŸ“ src/AddOperation.cpp

#include "AddOperation.h"

double AddOperation::execute(double a, double b) {
    return a + b;
}


